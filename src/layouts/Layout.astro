---
// src/layouts/Layout.astro
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link href="https://fonts.googleapis.com/css2?family=Syne:wght@700;800&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    </head>
    <body class="bg-[#050505] text-white antialiased min-h-screen relative overflow-x-hidden">
        
        <div class="fixed top-[-10%] left-1/2 -translate-x-1/2 w-full h-[600px] pointer-events-none"
             style="background: radial-gradient(circle, rgba(168,85,247,0.15) 0%, rgba(59,130,246,0.05) 50%, transparent 80%); filter: blur(100px); z-index: 0;">
        </div>

        <div class="relative z-10">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    @import "tailwindcss";

    html {
  scroll-behavior: smooth;
}

/* Compensar la altura del Navbar fijo para que no tape el título */
section {
  scroll-margin-top: 100px;
}

    html, body {
        background-color: #050505; /* Fondo negro sólido */
        margin: 0;
        padding: 0;
    }

    h1, h2, h3 { font-family: 'Syne', sans-serif; }
    
    .text-gradient {
        background: linear-gradient(to right, #A855F7, #3B82F6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>